<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:autoSizeMaxTextSize="350sp"
            android:text="Automobilis 1"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/textEdit_litrai"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:layout_gravity="end"
            android:layout_marginTop="170sp"
            android:layout_marginEnd="15sp"
            android:hint="Kiekis litrais"
            android:lines="1"
            android:textAlignment="center"
            android:textColor="#999" />

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="180sp"
            android:layout_marginEnd="15sp"
            android:text="Litrai"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/textEdit_kaina"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:layout_gravity="end"
            android:layout_marginTop="240sp"
            android:layout_marginEnd="15sp"
            android:hint="Viso sumokėta"
            android:textAlignment="center"
            android:textColor="#999" />

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="250sp"
            android:layout_marginEnd="15sp"
            android:text="Kaina"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/textEdit_odometras"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:layout_gravity="end"
            android:layout_marginTop="310sp"
            android:layout_marginEnd="15sp"
            android:hint="Kilometrai"
            android:textAlignment="center"
            android:textColor="#999" />

        <TextView
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="310sp"
            android:layout_marginEnd="15sp"
            android:text="Odometro rodmenys"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/textEdit_data"
            android:layout_width="150sp"
            android:layout_height="50sp"
            android:layout_gravity="end"
            android:layout_marginTop="380sp"
            android:layout_marginEnd="15sp"
            android:text="Uzpylimo data"
            android:textAlignment="center"
            android:textColor="#999"
            />

        <TextView
            android:layout_width="185sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15sp"
            android:layout_marginTop="390sp"
            android:layout_marginEnd="15sp"
            android:text="Data(YYYY.mm.dd)"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_vidutinesSanaudos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60sp"
            android:text="Vidutinės sąnaudos: 99.9 l/100km"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_vidutinesKaina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90sp"
            android:text="Vidutinė kilometro kaina: 99.99 eur"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_addToDataBase"
            android:layout_width="115sp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="450sp"
            android:layout_marginEnd="15sp"
            android:layout_marginBottom="15sp"
            android:text="Pridėti" />

        <Button
            android:id="@+id/buttonNavigate_settings"
            android:layout_width="115sp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="15sp"
            android:layout_marginTop="450sp"
            android:layout_marginBottom="15sp"
            android:text="Nustatymai" />

        <Button
            android:id="@+id/buttonNavigate_stats"
            android:layout_width="115sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="450sp"
            android:layout_marginBottom="15sp"
            android:text="Stats" />

